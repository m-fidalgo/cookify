{
  "expo": {
    "name": "cookify",
    "slug": "cookify",
    "scheme": "cookify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFA62B"
    },
    "assetBundlePatterns": ["**/*"],
    "web": {
      "bundler": "metro"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFA62B"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Cookify accesses your photos to let you choose one for your recipe!"
        }
      ]
    ]
  }
}
